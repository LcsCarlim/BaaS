{
  "openapi": "3.0.0",
  "info": {
    "title": "API do BaaS",
    "description": "Essa API tem o objetivo a manipulação de dados",
    "termsOfService": "http://localhost:3333/terms",
    "contact": {
      "email": "lucas.carlim@zuvia.com.br"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Cadastro de usuários",
        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": [
          "Usuário"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Registration failed!"
          },
          "200": {
            "description": "Usuário criado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/auth": {
      "post": {
        "summary": "Autenticação de um usuário",
        "description": "Essa rota será responsável por autenticar um usuário",
        "tags": [
          "Usuário"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Autenticado com sucesso!"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Usuário"
        ],
        "description": "Buscar todos os usuários",
        "summary": "Buscar todos os usuários",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "limit",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/{email}": {
      "patch": {
        "tags": [
          "Usuário"
        ],
        "description": "Alterar dados do usuário",
        "summary": "Alterar dados do usuário",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "Email do usuário para busca"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Senha alterada!"
          }
        }
      }
    },
    "/documents/upload": {
      "post": {
        "tags": [
          "Documento"
        ],
        "summary": "Envio de documento",
        "description": "Envio de documento",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "properties": {
                  "name": {
                    "type":"string"
                  },
                  "document_type": {
                    "type": "string"
                    },
                  "filename": {
                    "type": "file"
                  }
                },
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": {
          "description": "Upload efetuado"
          }
        }
      }
    },
    "/documents": {
      "get": {
        "tags": [
          "Documento"
        ],
        "description": "Buscar todos os documentos",
        "summary": "Buscar todos os documentos",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "limit",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/getDocument"
                }
              }
            }
          }
        }
      }
    },
    "/accounts": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Criação de conta",
        "description": "Criação de conta",
        "responses": {
          "201": {
            "description": "Conta criada"
          }
        }
      }
      
    },
    "/accounts/get": {
      "get": {
        "tags": [
          "Conta"
        ],
        "description": "Buscar todas as contas",
        "summary": "Buscar todas as contas",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "limit",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK!"
          }
        }
      }
    },
    "/accounts/deposit": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Depositar valor na conta",
        "description": "Depositar valor na conta",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "balance": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Valor depositado!"
          }
        }
      }
    },
    "/accounts/transfering/savings": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Transferir de conta pra poupança",
        "description": "Transferir de conta pra poupança",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "deposit": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Valor depositado!"
          }
        }
      }
    },
    "/accounts/transfering/balance": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Transferir de poupança praconta",
        "description": "Transferir de poupança pra conta",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "deposit": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Valor depositado!"
          }
        }
      }
    },
    "/accounts/transfer/{id}": {
      "post": {
        "tags": [
          "Conta"
        ],
        "description": "Transferir para outra conta",
        "summary": "Transferir para outra conta",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário para busca",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "balance": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Valor transferido!"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone_number": {
            "type": "number"
          }
        },
        "required": ["name", "last_name", "email", "password", "address", "phone_number"]
      }
    },
    "securitySchemes": {
      "bearer_token": {
        "type": "http",
        "description": "Coloque seu token aqui!",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    },
    "getDocument": {
      "name": {
        "type":"string"
      },
      "document_type": {
        "type": "string"
        },
      "filename": {
        "type": "file"
      }
    },
    "required": ["name", "document_type", "filename"]
  },
  "security": [
    {
    "bearer_token": {
      "type": "http",
      "scheme": "bearer_token",
      "bearerFormat": "JWT"
    }
  }
 ]
}